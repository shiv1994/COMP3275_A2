<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="comp3275.uwi.comp3275_a2.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Accelerometer Activity"
        android:id="@+id/button"
        android:layout_centerHorizontal="true"
        android:onClick="launchAccelerometerActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAUNCH LOCATION ACTIVITY"
        android:id="@+id/button2"
        android:onClick="launchLocationActivity"
        android:layout_below="@+id/button"
        android:layout_marginTop="41dp"
        android:layout_alignStart="@+id/button"
        android:layout_alignEnd="@+id/button" />
</RelativeLayout>
