<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="comp3275.uwi.comp3275_a2.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accelerometer_btn_txt"
        android:id="@+id/accelerometer_btn"
        android:layout_centerHorizontal="true"
        android:onClick="launchAccelerometerActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gyroscope_btn_txt"
        android:id="@+id/gyroscope_btn"
        android:layout_below="@+id/accelerometer_btn"
        android:layout_alignStart="@+id/accelerometer_btn"
        android:layout_alignEnd="@+id/accelerometer_btn"
        android:onClick="launchGyroscopeActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proximity_btn_txt"
        android:id="@+id/proximity_btn"
        android:layout_below="@+id/gyroscope_btn"
        android:layout_alignEnd="@+id/gyroscope_btn"
        android:layout_alignStart="@+id/gyroscope_btn"
        android:onClick="launchProximityActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Location Activity"
        android:id="@+id/loc_btn"
        android:onClick="launchLocationActivity"
        android:layout_below="@+id/proximity_btn"
        android:layout_alignStart="@+id/proximity_btn"
        android:layout_alignEnd="@+id/proximity_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bluetooth_btn_txt"
        android:id="@+id/blue_btn"
        android:onClick="launchBluetoothActivity"
        android:layout_below="@+id/loc_btn"
        android:layout_alignStart="@+id/loc_btn"
        android:layout_alignEnd="@+id/loc_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Stored Locations"
        android:id="@+id/button"
        android:onClick="launchLocationViewActivity"
        android:layout_below="@+id/blue_btn"
        android:layout_alignStart="@+id/blue_btn"
        android:layout_marginTop="57dp"
        android:layout_alignEnd="@+id/blue_btn" />

</RelativeLayout>
